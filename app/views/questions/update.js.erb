<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('#question<%= @question.id %>').replaceWith('<%= j render @question %>');
  $('.best').html('<%= j render 'questions/best_answer' %>');
  $('.answers').html('<%= j render @question.answers_without_best %>');
<% end %>
